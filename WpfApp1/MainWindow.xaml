<Window
    x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Sudoku"
    Width="750"
    Height="300"
    fw:AcrylicWindow.Enabled="True"
    SizeToContent="Height"
    mc:Ignorable="d">
    <Grid Margin="0,0,0,100">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid
            fw:PointerTracker.Enabled="True"
            Background="#01FFFFFF"
            RenderTransformOrigin="0.512,0.573">
            <StackPanel>
                <ListViewItem Name="Home" Padding="0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Margin="15" Kind="Home" />
                        <TextBlock VerticalAlignment="Center" Text="Home" />
                    </StackPanel>
                </ListViewItem>
                <ListView FontSize="15" MouseLeftButtonUp="Solve_MouseLeftButtonDown">
                    <ListViewItem Name="Solve" Padding="1">
                        <StackPanel MaxHeight="1000" Orientation="Horizontal">
                            <materialDesign:PackIcon Margin="15" Kind="Run" />
                            <TextBlock VerticalAlignment="Center" Text="Solve" />
                        </StackPanel>
                    </ListViewItem>
                </ListView>
                <ListView
                    x:Name="DifficultList"
                    SelectionChanged="DifficultList_SelectionChanged"
                    SelectionMode="Single">
                    <ListView.View>
                        <GridView>

                            <GridViewColumn>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox
                                            Width="300"
                                            IsSynchronizedWithCurrentItem="True"
                                            ItemsSource="{Binding DifficultSource}"
                                            SelectedItem="{Binding DifficultSourceSelectedCurrently, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Grid>
        <Grid Height="309">
            <DataGrid
                Name="dataGrid1"
                Margin="352,0,-581,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                AlternationCount="0"
                AutoGenerateColumns="True"
                CanUserAddRows="false"
                ColumnWidth="SizeToCells"
                GridLinesVisibility="All"
                HeadersVisibility="None"
                HorizontalGridLinesBrush="Black"
                HorizontalScrollBarVisibility="Hidden"
                PreviewTextInput="OnPreviewTextInput"
                RenderTransformOrigin="0.988,0.498"
                VerticalGridLinesBrush="Black">
                <DataGrid.Background>
                    <DrawingBrush TileMode="Tile" Viewport="0,0,0.25,0.25">
                        <DrawingBrush.Drawing>
                            <DrawingGroup>
                                <GeometryDrawing Brush="White">
                                    <GeometryDrawing.Geometry>
                                        <RectangleGeometry Rect="0,0,100,100" />
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>

                                <GeometryDrawing>
                                    <GeometryDrawing.Geometry>
                                        <GeometryGroup>
                                            <RectangleGeometry Rect="0,0,50,50" />
                                            <RectangleGeometry Rect="50,50,50,50" />
                                        </GeometryGroup>
                                    </GeometryDrawing.Geometry>
                                    <GeometryDrawing.Brush>
                                        <LinearGradientBrush>
                                            <GradientStop Offset="1.0" Color="#C0C0C0" />
                                        </LinearGradientBrush>
                                    </GeometryDrawing.Brush>
                                </GeometryDrawing>
                            </DrawingGroup>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>


                </DataGrid.Background>
            </DataGrid>

        </Grid>
    </Grid>
</Window>
